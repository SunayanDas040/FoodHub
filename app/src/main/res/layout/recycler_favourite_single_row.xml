<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="6dp"
    app:cardCornerRadius="4dp"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/llContent"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:weightSum="6">

        <ImageView
            android:id="@+id/imgResImage"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_weight="1.5"
            android:padding="6dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.3"
            tools:ignore = "Suspicious0dp">

            <TextView
                android:id="@+id/txtResName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:padding="8dp"
                android:text="Name of The Restaurant"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/txtCostForOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rs.299/person"
                android:drawableLeft="@drawable/rupee_indian"
                android:padding="8dp"
                android:layout_below="@id/txtResName"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#616161"
                android:layout_marginTop="20dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2">

            <ImageView
                android:id="@+id/imgFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/ic_favourite"
                android:backgroundTint="#ffffff"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/txtResRating"
                android:layout_width="match_parent"
                android:padding="4dp"
                android:layout_height="wrap_content"
                android:textColor="#ffca28"
                android:text="4.5"
                android:drawablePadding="4dp"
                android:layout_below="@id/imgFav"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"/>

        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>