<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deep_orange"
    tools:context=".activity.OrderPlacedActivity">

    <ImageView
        android:id="@+id/imgOrderPlaced"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_order_placed"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/txtOrderPlaced"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/successfully_placed"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_below="@id/imgOrderPlaced"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnOk"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/button"
        android:text="Ok"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>